<!DOCTYPE html>
<html>
<head>
    <title>Car Filter</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="p-4">
        <form id="filterForm" class="row g-3 p-4 rounded-4 row shadow-lg">
            <h1 class="mb-4">Filter Cars by Make and Year</h1>

            <div id="alertPlaceholder" class="mb-3"></div>

            <div class="col-md-6">
                <label for="makeSearch" class="form-label">Search Car Make</label>
                <div class="input-group">
                    <input type="text" id="makeSearch" class="form-control" placeholder="Search for a Make..." />
                    <button id="clearSearch" class="btn btn-outline-secondary" type="button">X</button>
                </div>
                <select id="makeId" name="makeId" class="form-select mt-2" size="10" required></select>

                <div class="mt-2">
                    <label for="selectedMake" class="form-label">Selected Car Make</label>
                    <input type="text" id="selectedMake" class="form-control" readonly />
                </div>
            </div>

            <div class="col-md-6">
                <label for="year" class="form-label">Manufacture Year</label>
                <input type="number"
                       id="year"
                       name="year"
                       class="form-control"
                       placeholder="Enter Year"
                       min="1900"
                       max="@DateTime.Now.Year"
                       required />
            </div>
            <div class="d-flex justify-content-end p-0">
                <div class="col-1">
                    <button type="button" id="submitButton" class="btn btn-primary w-100">Search</button>
                </div>
            </div>
        </form>

        <div id="results" class="mt-5 d-flex justify-content-between gap-4 flex-md-row flex-column">
            <div id="vehicleTypesResultsContainer" class="col-12 col-md-6 overflow-auto rounded-4 shadow-lg p-4" style="display:none; height:400px;">
                <h3>Vehicle Types</h3>
                <table id="vehicleTypes" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Vehicle Type Name</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>

            <div id="carModelsResultsContainer" class="col-12 col-md-6 overflow-auto rounded-4 shadow-lg p-4" style="display:none; height:400px;">
                <h3>Car Models</h3>
                <table id="carModels" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Car Model Name</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/carViewScript.js"></script>
</body>
</html>
